{
    "name": "typicms/base",
    "description": "Multilingual CMS build with Laravel 5.0",
    "keywords": ["cms", "multilingual", "laravel", "typi"],
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel De Backer",
            "email": "samuel@typidesign.be",
            "role": "Developer"
        }
    ],
    "type": "project",
    "require": {
        "laravel/framework": "~5.0.0",
        "barryvdh/laravel-debugbar": "~2.0",
        "cartalyst/sentry": "dev-master",
        "cviebrock/image-validator": "~1.0",
        "dimsav/laravel-translatable": "dev-master",
        "laracasts/utilities": "dev-master",
        "typicms/core": "~1.8",
        "adamwathan/bootforms": "0.4.*",
        "patchwork/utf8": "~1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/BootstrapCMS/sentry"
        },
        {
            "type": "vcs",
            "url": "https://github.com/loshmis/PHP-Vars-To-Js-Transformer"
        }
    ],
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
